<script type="text/javascript">
    function register(){
        var getUserID = document.getElementById('usr').value;
        var getUserEmail = document.getElementById('email').value;
        if(getUserID == "" || getUserEmail == ""){
            alert("Please input your ID and Email accurate!");
        }
        else{
            window.location.replace('/register?usr='+getUserID+'&email='+getUserEmail);
        }
    }
</script>
