<html>

<head>
</head>
    <header>
        <% include ../elements/header %>
        <% include ../elements/navigator %>
    </header>
<body>
    <div class="container">
        <div class="jumbotron">
            <h3> Access-Control-System Web version </h3>
        </div>
        <div class="container text-center">
            <label for="usr">Name:</label>
            <input type="text" class="form-control" id="login_usr">
            <br>
            <button type="button" class="btn btn-primary" onclick="login();">Open</button>
            <button type="button" class="btn btn-secondary">Clean</button>
        </div>
    </div>
</body>
<script type="text/javascript">
    function login(){
        var getUserID = document.getElementById('login_usr').value;
        if(getUserID == ""){
            alert("Please input your ID accurate!");
        }
        else{
            window.location.replace('/open?usr='+getUserID);
        }
    }
</script>
</html>
